    "target": "es5",
    "module": "system",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/*.test.ts", "**/*.mock.ts"]
}
